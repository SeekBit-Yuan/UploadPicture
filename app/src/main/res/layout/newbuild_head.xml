            <!--android:layout_height="match_parent"></com.sznews.upload.uploadpicture.utils.LoadListView>-->

            <!--</android.support.v4.widget.SwipeRefreshLayout>-->

            <!--</LinearLayout>-->

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>